@model PartialViewExample_WithDynamicCardUpload.Product



        <div class="col-sm-12 col-md-6 col-lg-3 ">
            <div class="card">
                <img class="card-img-top" src= "../images/@Model.ProdImage" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@Model.ProductName</h4>
                    <p class="card-text">
                        @Model.ProductDesc
                    </p>
                    <p class="card-text">
                        @Model.Price
                    </p>
                    <a href="#" class="btn btn-danger m-auto">Add to Cart</a>
                </div>
            </div>
        </div>
   
